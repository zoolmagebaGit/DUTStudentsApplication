@{
    ViewBag.Title = "Upload Image";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upload Image</h2>

@using (Html.BeginForm("UploadBlob", "Blob", FormMethod.Post, new { encType = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="" container">
        <div class="form-group">
            <br />
            <label>Upload Blob to Azure Storage</label>
            <input type="file" name="UploadFileName" value=" Browse" class="btn-primary" />
            <br />
            <button type="submit" id="buttonSubmit" class="btn btn-success">Upload</button>
        </div>

    </div>
}


